<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondohor"
        tools:context=".ContactActivity"
        android:id="@+id/container">

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="494dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="137dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/fondocuadro"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/botonLinkId"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="LinkedIn"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/linkedin" />

            <ImageButton
                android:id="@+id/botonWtsApp"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:layout_marginTop="68dp"
                android:backgroundTint="#02FFFFFF"
                android:contentDescription="Whatsapp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/whatsapp" />

            <Button
                android:id="@+id/botonEscribir"
                android:layout_width="122dp"
                android:layout_height="82dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/botones"
                android:text="Escribir"
                android:textColor="@color/white"
                app:backgroundTint="@null" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>